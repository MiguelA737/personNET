@{
    ViewBag.Title = "person.NET";
}
<link rel="stylesheet" type="text/css" href="~/css/StyleSheet1.css">
<div class="card">
    <div id="divBusca">
        <input id="name" type="text" placeholder="Buscar..." />
        <button id="pesquisar" class="btnBusca">Buscar</button>
    </div>
</div>
<div class="row">
    <div id="resultados"></div>
</div>

@section Scripts{

    <script>
        $(function () {
            $("#pesquisar").on("click", function () {

                var search = {
                    Name: $("#name").val()
                };
                //Chama a Action Search do Controller MainPage para obter uma lista de resultados, enviando uma Search como parâmetro
                $.getJSON("/MainPage/Search", search, function (data) {

                    var resultados = $("#resultados");
                    resultados.empty();

                    if (data.length == 0) {
                        resultados.append('<div class="alert alert-warning">Não há resultados.</div>');
                        return false;
                    }

                    for (var i = 0; i < data.length; i++) {

                        if (data[i].Type == "Text")
                            resultados.append('<div class="card"><h4>Text: <b>' + data[i].ContentText + '</div>')
                        if (data[i].Type == "User")
                            resultados.append('<div class="card"><h4>User: <b>' + data[i].Name + '</div>')

                    }

                })

            })

        })


    </script>    
    
}
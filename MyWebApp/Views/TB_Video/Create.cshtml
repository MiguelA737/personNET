@model MyWebApp.Models.TB_Video

@{
    ViewBag.Title = "Postar Vídeo";
}

<h2>Postar Vídeo</h2>

@using (Html.BeginForm("Create", "TB_Video", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    @Html.EditorFor(model => model.DirVideo, new { htmlAttributes = new { @class = "form-control", @type = "file", @value = "Selecionar Arquivo", @accept = "video/*" } })
    @Html.ValidationMessageFor(model => model.DirVideo, "", new { @class = "text-danger" })
    <div><span>Título</span></div>
    @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
    <input type="submit" value="Fazer Upload" />

}
<div>
    @Html.ActionLink("Voltar à Página Principal", "Index", "MainPage")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}